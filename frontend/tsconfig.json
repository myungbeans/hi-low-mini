{
	"compilerOptions": {
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		},
		"moduleResolution": "bundler",
		"module": "es2020",
		"lib": ["es2020", "DOM", "DOM.Iterable"],
		"target": "es2020",
		"resolveJsonModule": true,
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
 